<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
    </style>

    <style name="title">

        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="subtitleItem1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>

    <style name="detailTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondaryColor</item>
    </style>

    <style name="detailText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondaryLightColor</item>
    </style>

    <style name="subtitleItem2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primaryLightColor</item>
    </style>

    <style name="items">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>



</resources>
